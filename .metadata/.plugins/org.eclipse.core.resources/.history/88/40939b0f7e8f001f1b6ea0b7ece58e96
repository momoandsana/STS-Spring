package sample03;

public class BookController {
	BookDAO bookDao;
	BookVo bookVo;
	
	// 기본 생성자
	BookController(){}

	// 매개변수를 받는 생성자
	BookController(BookDAO bookDao, BookVo bookVo){
		this.bookDao = bookDao;
		this.bookVo = bookVo;
	}
	
	// 책 삽입 메서드
	void bookInsert() {
		bookDao.insert(bookVo);
		System.out.println("책이 삽입되었습니다: " + bookVo);
	}
}
