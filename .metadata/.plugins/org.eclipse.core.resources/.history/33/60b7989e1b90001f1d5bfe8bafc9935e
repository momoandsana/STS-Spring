package sample06;

import org.springframework.beans.factory.annotation.Autowired;

public class EmpController {
	
	@Autowired //byType 으로 주입 EmpDTO 객체를 찾아서 주입. xml 파일에 dto 빈이 있으므로
	private EmpDTO empDTO;
	
	@Autowired //byType 생성자나 set 이 필요가 없음. xml 파일에서 서비스 빈을 찾아서 넣어줌
	private EmpService empService;
	
	@Autowired
	private EmpDTO dto1;
	
	public EmpController() {
		System.out.println("EmpController 생성자입니다");
	}
	
	@PostConstruc
	public void init() {
		System.out.println("init 메소드");
		System.out.println("empDTO = "+empDTO);
		System.out.println("empService = "+empService);
	}
	
	public void empTest() {
		System.out.println("empDTO = "+empDTO);
		System.out.println("empService = "+empService);
		
		empService.test(empDTO);
	}
}
